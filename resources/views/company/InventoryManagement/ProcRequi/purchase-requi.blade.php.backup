// Handle item selection change
$(document).on('change', '.item-select', function() {
    const row = $(this).closest('.item-row');
    const selectedOption = $(this).find('option:selected');
    const itemData = selectedOption.data('item-data');
    
    if (itemData) {
        // Update hidden fields
        row.find('input[name="item_id[]"]').val(itemData.id);
        row.find('input[name="item_name[]"]').val(itemData.name);
        row.find('input[name="item_unit[]"]').val(itemData.unit);
        row.find('input[name="item_unit_price[]"]').val(itemData.unit_price);
        row.find('input[name="item_available_qty[]"]').val(itemData.quantity_available);
        
        // Update display fields
        row.find('.unit-display').val(itemData.unit);
        row.find('.price-display').val(itemData.unit_price);
        
        // Update available quantity text
        row.find('.available-qty-text').text(`Available: ${itemData.quantity_available} ${itemData.unit}`);
        
        // Update item details
        row.find('.item-details').html(`
            <strong>Category:</strong> ${itemData.category}<br>
            <strong>Brand:</strong> ${itemData.brand || 'N/A'}<br>
            <strong>SKU:</strong> ${itemData.sku || 'N/A'}<br>
            <strong>Location:</strong> ${itemData.location || 'N/A'}<br>
            <strong>Description:</strong> ${itemData.description || 'No description available'}
        `);
        
        // Calculate total for this item
        calculateItemTotal(row);
    } else {
        // Clear fields if no item selected
        row.find('input[name="item_id[]"]').val('');
        row.find('input[name="item_name[]"]').val('');
        row.find('input[name="item_unit[]"]').val('');
        row.find('input[name="item_unit_price[]"]').val('');
        row.find('input[name="item_available_qty[]"]').val('');
        row.find('.unit-display').val('');
        row.find('.price-display').val('');
        row.find('.available-qty-text').text('Available: 0');
        row.find('.item-details').html('');
    }
    
    // Update grand totals
    calculateTotals();
});

// Calculate total for a specific item row
function calculateItemTotal(row) {
    const quantity = parseFloat(row.find('input[name="item_quantity[]"]').val()) || 0;
    const unitPrice = parseFloat(row.find('input[name="item_unit_price[]"]').val()) || 0;
    const total = quantity * unitPrice;
    row.find('input[name="item_total[]"]').val(total.toFixed(2));
}

// Calculate grand totals
function calculateTotals() {
    let totalItems = 0;
    let totalValue = 0;
    
    $('.item-row').each(function() {
        const quantity = parseFloat($(this).find('input[name="item_quantity[]"]').val()) || 0;
        const total = parseFloat($(this).find('input[name="item_total[]"]').val()) || 0;
        
        totalItems += quantity;
        totalValue += total;
    });
    
    // Update summary fields
    $('#totalItems').text(totalItems);
    $('#totalValue').text(totalValue.toFixed(2));
}

// Handle quantity change
$(document).on('input', 'input[name="item_quantity[]"]', function() {
    const row = $(this).closest('.item-row');
    const quantity = parseFloat($(this).val()) || 0;
    const availableQty = parseFloat(row.find('input[name="item_available_qty[]"]').val()) || 0;
    
    // Check if quantity exceeds available
    if (quantity > availableQty) {
        $(this).addClass('is-invalid');
        row.find('.available-qty-text').addClass('text-danger').text(`Available: ${availableQty} (Quantity exceeds available stock!)`);
    } else {
        $(this).removeClass('is-invalid');
        row.find('.available-qty-text').removeClass('text-danger').text(`Available: ${availableQty}`);
    }
    
    calculateItemTotal(row);
    calculateTotals();
});

// Handle unit price change
$(document).on('input', 'input[name="item_unit_price[]"]', function() {
    const row = $(this).closest('.item-row');
    calculateItemTotal(row);
    calculateTotals();
});

