// Currency formatter
window.CurrencyHelper = {
    format: function(amount) {
        if (!amount) return 'GH0.00';
        const formatted = parseFloat(amount).toLocaleString('en-US', {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2
        });
        return 'GH' + formatted;
    }
};

