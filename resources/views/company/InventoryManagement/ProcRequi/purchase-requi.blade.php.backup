// Function to fetch purchase orders with search and pagination
function fetchPurchaseOrders(page = 1, startDate = '', endDate = '', searchQuery = '') {
    $.ajax({
        url: '/company/warehouse/purchasing_order/all',
        method: 'POST',
        data: {
            page: page,
