// Render purchase orders table
function renderPurchaseOrders(response) {
    let tableBody = '';
    
    if (response.data.length === 0) {
        tableBody = `<tr>
            <td colspan="8" class="text-center">
                <div class="text-muted">
                    <i class="fas fa-box-open fa-3x mb-3"></i>
                    <p>No purchase orders found. Create your first PO.</p>
                </div>
            </td>
        </tr>`;
    } else {
        response.data.forEach(po => {
            let statusBadge = '';
            switch(po.status.toLowerCase()) {
                case 'created': statusBadge = 'bg-info'; break;
                case 'approved': statusBadge = 'bg-primary'; break;
                case 'delivered': statusBadge = 'bg-success'; break;
                case 'cancelled': statusBadge = 'bg-danger'; break;
                default: statusBadge = 'bg-secondary';
            }

              // Calculate total items by summing all quantities
            const { totalItems, totalPrice } = po.items.reduce((acc, item) => {
                return {
                    totalItems: acc.totalItems + parseInt(item.quantity),
                    totalPrice: acc.totalPrice + (parseFloat(item.unit_price) * parseInt(item.quantity))
                };
            }, { totalItems: 0, totalPrice: 0 });
            
            tableBody += `<tr>
                <td>${po.po_number}</td>
                <td>${po.supplier?.name || 'N/A'}</td>
                <td>${po.order_date}</td>
                <td>${po.delivery_date}</td>
                <td><span class="badge ${statusBadge}">${po.status}</span></td>
                <td>${totalItems}</td>
                <td>${window.CurrencyHelper.format(totalPrice)}</td>
                <td class="text-nowrap">
                    <div class="d-flex flex-nowrap gap-1">
                        <button class="btn btn-outline-primary btn-action btn-sm view-order" data-id="${po.id}">
                            <i class="fas fa-eye d-none d-sm-inline"></i>
                            <span class="d-inline d-sm-none">View</span>
                        </button>
                        <button class="btn btn-outline-warning btn-action btn-sm edit-order" data-id="${po.id}">
                            <i class="fas fa-edit d-none d-sm-inline"></i>
                            <span class="d-inline d-sm-none">Edit</span>
                        </button>
                        <button class="btn btn-outline-danger btn-action btn-sm delete-order" data-id="${po.id}">
                            <i class="fas fa-trash-alt d-none d-sm-inline"></i>
                            <span class="d-inline d-sm-none">Delete</span>
                        </button>
                    </div>
                </td>
            </tr>`;
        });
    }
    
    $('#purchaseOrdersTable tbody').html(tableBody);
}

// Render pagination
function renderPagination(response) {
    let paginationHtml = '';
    
    // Previous button
    paginationHtml += `<li class="page-item ${response.current_page === 1 ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="changePage(event, ${response.current_page - 1})">Previous</a>
    </li>`;
    
    // Page numbers
    for (let i = 1; i <= response.last_page; i++) {
        paginationHtml += `<li class="page-item ${i === response.current_page ? 'active' : ''}">
            <a class="page-link" href="#" onclick="return changePage(event, ${i})">${i}</a>
        </li>`;
    }
    
    // Next button
    paginationHtml += `<li class="page-item ${response.current_page === response.last_page ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="return changePage(event, ${response.current_page + 1})">Next</a>
    </li>`;
    
    $('#poPagination').html(paginationHtml);
}

// Change page
function changePage(event, page) {
    event.preventDefault();
    const startDate = $('#startDateFilter').val();
    const endDate = $('#endDateFilter').val();
    const searchQuery = $('#searchInput').val();
    fetchPurchaseOrders(page, startDate, endDate, searchQuery);
    return false;
}

